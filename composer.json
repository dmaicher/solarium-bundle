{
    "name": "dama/solarium-bundle",
    "description": "Integrates the Solarium library as a Symfony bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "David Maicher",
            "email": "mail@dmaicher.de"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.1",
        "solarium/solarium": "^5.2",
        "symfony/framework-bundle": "^4.4 || ^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpstan/phpstan": "^0.12.19",
        "phpunit/phpunit": "^7.5 || ^8.5 || ^9.1",
        "symfony/phpunit-bridge": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "DAMA\\SolariumBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
    }
}
